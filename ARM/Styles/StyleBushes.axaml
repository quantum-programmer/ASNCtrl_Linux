<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Стили для кнопок управления -->
	<Style Selector="Button.ControlButton">
		<Setter Property="Background" Value="#F0F0F0"/>
		<Setter Property="BorderBrush" Value="#4D4D4D"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Foreground" Value="Black"/>
		<Setter Property="FontWeight" Value="500"/>
		<Setter Property="CornerRadius" Value="3"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
	</Style>

	<Style Selector="Button.ControlButton:pointerover">
		<Setter Property="Background" Value="#E0E0E0"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<Style Selector="Button.ControlButton:pressed">
		<Setter Property="Background" Value="#D0D0D0"/>
	</Style>

	<!-- Стиль для невидимых кнопок -->
	<Style Selector="Button.hidden-button">
		<Setter Property="Opacity" Value="0"/>
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderBrush" Value="Transparent"/>
	</Style>

	<Style Selector="Button.hidden-button:pointerover">
		<Setter Property="Opacity" Value="1"/>
		<Setter Property="Background" Value="#F0F0F0"/>
		<Setter Property="BorderBrush" Value="#4D4D4D"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

</Styles>
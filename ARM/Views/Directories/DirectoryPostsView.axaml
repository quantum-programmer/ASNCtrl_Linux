<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ARM.Views.Directories.DirectoryPostsView"
             xmlns:vm="clr-namespace:ARM.ViewModels.Directories"
             xmlns:models="clr-namespace:ARM.Models"
             x:DataType="vm:DirectoryPostsViewModel"
             >
  <UserControl.Styles>
    <StyleInclude Source="/Styles/Styles.axaml" />
  </UserControl.Styles>

  <Grid ShowGridLines="False">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <!-- Заголовок -->
    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="5" Margin="10">
      <Svg Path="/Assets/prom.svg" Classes="title" />
      <TextBlock Text="Справочник постов" Classes="title" />
    </StackPanel>

    <!-- Панель кнопок -->
    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top" Spacing="10" Margin="5" Background="#F0F0F0">
      <Button Classes="Task" Command="{Binding AddCommand}">
        <StackPanel Orientation="Horizontal" Spacing="3" HorizontalAlignment="Center">
          <TextBlock Text="Добавить" Classes="Task" />
          <Svg Path="/Assets/plus.svg" Height="20" Width="20" />
        </StackPanel>
      </Button>

      <Button Classes="Task" Command="{Binding DeleteCommand}" CommandParameter="{Binding SelectedPost}">
        <StackPanel Orientation="Horizontal" Spacing="3" HorizontalAlignment="Center">
          <TextBlock Text="Удалить" Classes="Task" />
          <Svg Path="/Assets/minus.svg" Height="20" Width="20" />
        </StackPanel>
      </Button>

      <Button Classes="Task" Command="{Binding SaveCommand}" CommandParameter="{Binding SelectedPost}">
        <StackPanel Orientation="Horizontal" Spacing="3" HorizontalAlignment="Center">
          <TextBlock Text="Сохранить" Classes="Task" />
          <Svg Path="/Assets/save.svg" Height="20" Width="20" />
        </StackPanel>
      </Button>

      <Button Classes="Task" Command="{Binding CancelCommand}">
        <StackPanel Orientation="Horizontal" Spacing="3" HorizontalAlignment="Center">
          <TextBlock Text="Отменить" Classes="Task" />
          <Svg Path="/Assets/close.svg" Height="20" Width="20" />
        </StackPanel>
      </Button>
    </StackPanel>

    <!-- Таблица данных -->
    <DataGrid ItemsSource="{Binding Posts}"
              SelectedItem="{Binding SelectedPost}"
              Grid.Row="2"
              IsReadOnly="False"
              CanUserReorderColumns="True"
              CanUserResizeColumns="True"
              CanUserSortColumns="False"
              GridLinesVisibility="All"
              AutoGenerateColumns="False"
              BorderThickness="1" BorderBrush="Gray"
              Margin="10">
      <DataGrid.Styles>
        <!-- Для всех текстов внутри ячеек -->
        <Style Selector="DataGridCell TextBlock">
          <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Для всех ComboBox внутри ячеек -->
        <Style Selector="DataGridCell ComboBox">
          <Setter Property="FontSize" Value="14"/>
        </Style>
      </DataGrid.Styles>
      <DataGrid.Columns>
        <DataGridTextColumn Header="Сторона" Binding="{Binding Side}" />
        <DataGridTextColumn Header="Группа" Binding="{Binding Place}" />
        <DataGridTextColumn Header="Точка" Binding="{Binding Point}" />
        <DataGridTextColumn Header="Пост" Binding="{Binding Post}" />

        <!-- FactWMethod -->
        <DataGridTemplateColumn Header="Метод расчета массы">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <TextBlock Text="{Binding LookupFactWMethod}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
          <DataGridTemplateColumn.CellEditingTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <ComboBox ItemsSource="{Binding FactWMethodsLookup}"
                        SelectedItem="{Binding SelectedFactWMethod, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
            </DataTemplate>
          </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>

        <!-- Direction -->
        <DataGridTemplateColumn Header="Направление">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <TextBlock Text="{Binding LookupDirection}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
          <DataGridTemplateColumn.CellEditingTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <ComboBox ItemsSource="{Binding DirectionsLookup}"
                        SelectedItem="{Binding SelectedDirection, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
            </DataTemplate>
          </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>

        <!-- MachineType -->
        <DataGridTemplateColumn Header="Тип">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <TextBlock Text="{Binding LookupMachineType}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
          <DataGridTemplateColumn.CellEditingTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <ComboBox ItemsSource="{Binding MachineTypesLookup}"
                        SelectedItem="{Binding SelectedMachineType, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
            </DataTemplate>
          </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>

        <!-- CtrlType -->
        <DataGridTemplateColumn Header="Тип контроллера">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <TextBlock Text="{Binding LookupCtrlType}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
          <DataGridTemplateColumn.CellEditingTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <ComboBox ItemsSource="{Binding CtrlTypesLookup}"
                        SelectedItem="{Binding SelectedCtrlType, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
            </DataTemplate>
          </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>

        <DataGridCheckBoxColumn Header="Режим КМХ" Binding="{Binding KMXFill}" />

        <!-- UpDownFill -->
        <DataGridTemplateColumn Header="Положение налива">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <TextBlock Text="{Binding LookupUpDownFill}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
          <DataGridTemplateColumn.CellEditingTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <ComboBox ItemsSource="{Binding UpDownFillsLookup}"
                        SelectedItem="{Binding SelectedUpDownFill, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
            </DataTemplate>
          </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>

        <!-- UserTypedTemperature -->
        <DataGridTemplateColumn Header="Факт. температура">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <TextBlock Text="{Binding LookupUserTypedTemperature}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
          <DataGridTemplateColumn.CellEditingTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <ComboBox ItemsSource="{Binding UserTypedTemperaturesLookup}"
                        SelectedItem="{Binding SelectedUserTypedTemperature, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
            </DataTemplate>
          </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>

        <!-- StartReversed -->
        <DataGridTemplateColumn Header="Порядок запуска">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <TextBlock Text="{Binding LookupStartReversed}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
          <DataGridTemplateColumn.CellEditingTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <ComboBox ItemsSource="{Binding StartReversedsLookup}"
                        SelectedItem="{Binding SelectedStartReversed, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
            </DataTemplate>
          </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>
        
        <!-- FactVMethod -->
        <DataGridTemplateColumn Header="Метод расчета объема">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <TextBlock Text="{Binding LookupFactVMethod}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
          <DataGridTemplateColumn.CellEditingTemplate>
            <DataTemplate x:DataType="models:PostModel">
              <ComboBox ItemsSource="{Binding FactVMethodsLookup}"
                        SelectedItem="{Binding SelectedFactVMethod, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
            </DataTemplate>
          </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>

        <!-- Остальные не lookup -->

        <!--<DataGridCheckBoxColumn Header="IsEPost" Binding="{Binding IsEPost}" />
        <DataGridTextColumn Header="Density" Binding="{Binding Density}" />
        <DataGridTextColumn Header="Temperature" Binding="{Binding Temperature}" />
        <DataGridTextColumn Header="LabDensity" Binding="{Binding LabDensity}" />
        <DataGridTextColumn Header="LabTemperature" Binding="{Binding LabTemperature}" />
        <DataGridTextColumn Header="Tank" Binding="{Binding Tank}" />
        <DataGridTextColumn Header="HydroMeter" Binding="{Binding HydroMeter}" />
        <DataGridTextColumn Header="MType" Binding="{Binding MType}" />
        <DataGridTextColumn Header="LastRecordBUIJournal" Binding="{Binding LastRecordBUIJournal}" />
        <DataGridTextColumn Header="TotalVLast" Binding="{Binding TotalVLast}" />-->
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
  
</UserControl>
